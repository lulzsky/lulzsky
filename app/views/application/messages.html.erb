                            <div class="block">
                                <div class="block-title">
                                 <h2>Inbox <strong>(<%= session[:msgnew] %>)</strong></h2>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover table-vcenter">
                                        <thead>
                                            <tr>
                                                <td class="text-center">
                                                </td>
                                                <td colspan="3">
                                                </td>
                                                <td class="text-right" colspan="3">
                                                    <strong><%= session[:msgnew] %> new,  <%= session[:msgtopic].size%>  messages</strong>  
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <% (0..session[:msgtopic].size-1).each do |i| %>
                                                <td class="text-center" style="width: 0px;">                                             
                                                </td>
                                                <td class="text-center" style="width: 30px;">
                                                <% if session[:msgread][i+1][0] == '#EFDAEC'%>
                                                <%= "<a class=\"text-success msg-read-btn\"><i class=\"fa fa-circle\"></i></a>".html_safe %>
                                                <% end %>
                                                </td>
                                                <td style="width: 20%;"><%= session[:msgtime][i][0] %></td>
                                                <td>           
                                                    <a href="/messages/<%= i+1 %>"><strong><%= session[:msgtopic][i].join.html_safe%></strong>  <span class="label label-info"><%= session[:msgtime][i][1] %></span></a>
                                                    <span class="text-muted"></span>
                                                </td>
                                                <td class="text-center" style="width: 1px;">
                                                <% d_dd = session[:msgtime][i][0][0,2] %>
                                                <% d_mm = session[:msgtime][i][0][3,2] %>   
                                                <% d_yy = session[:msgtime][i][0][6,4] %>
                                                <% @agodate = Date.new(d_yy.to_i, d_mm.to_i,d_dd.to_i) %>
                                                </td>
                                                <td class="text-right" style="width: 150px;"><em><%=distance_of_time_in_words(Time.now, @agodate) %> ago</em></td>
                                            </tr>
                                            </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
         </div>