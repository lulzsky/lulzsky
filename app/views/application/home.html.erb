  <% time = Time.now %>
  <div id="page-content">
                    <div class="content-header">
                        <div class="header-section">
                            <h1><i class="fa fa-home"></i> Home<br><small>Welcome to LULZSky!</small></h1>
                        </div>
                    </div>
             
                    <div class="row">
                        <div class="col-md-6">
                            <div class="widget">
                                <div class="widget-extra themed-background-dark">
                                    <div class="widget-options">
                                        <div class="btn-group btn-group-xs">
                                        </div>
                                    </div>
                                    <h3 class="widget-content-light">
                                        Tasks<strong></strong>
                                        <small></small>
                                    </h3>
                                </div>

                                <div class="widget-extra">
                                    <div class="timeline">
                                        <h3 class="timeline-header"><%=time.strftime("%A")%> <small><strong><%= time.strftime("%B %d, %Y")%></strong></small></h3>
                                        <ul class="timeline-list">
                                            <%  session[:today] = session[:today].sort_by{|e| e[:start]} %>
                                            <%if session[:today].size > 0 %>
                                            <% (0..session[:today].size-1).each do |i| %>
                                                    <li class="active">
                                                    <div class="timeline-time"><small><%= session[:today][i][:start] %> - <%= session[:today][i][:end] %></small></div>
                                                    <div class="timeline-icon"><i class="gi gi-pencil"></i></div>
                                                    <div class="timeline-content">
                                                    <p class="push-bit"><a href=""><strong><%= session[:today][i][:class] %></strong></a></p>
                                                    <p class="push-bit">Room :<%= session[:today][i][:room].join %></p>
                                                    </div> 
                                            <%end%>
                                            <% else %>
                                                <li class="active">
                                                <div class="timeline-icon"><i class="gi gi-heart"></i></div>
                                                <div class="timeline-content">
                                                <p class="push-bit"><strong>No Class</strong></a></p>
                                                <p class="push-bit">You have no classes today</p>
                                                </div>
                                                </li>
                                            <% end %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                       </div>
                        <div class="row">
                        <div class="col-md-6">
                            <div class="widget">
                                <div class="widget-extra themed-background-dark">
                                    <div class="widget-options">
                                        <div class="btn-group btn-group-xs">
                                        </div>
                                    </div>
                                    <h3 class="widget-content-light">
                                        Final Exam<strong></strong>
                                        <small>List</small>
                                    </h3>
                                </div>
                             <div class="block-content-full">
                                    <ul class="media-list media-feed media-feed-hover">
                                        <%if session[:exams].size > 0 %>
                                            <% (0..session[:exams].size-1).each do |i| %>
                                        <li class="media">
                                            <div class="media-body">
                                                <p class="push-bit">
                                                <%= session[:exams][i].join.html_safe %>
                                                </p>
                                            </div>
                                                    </li>
                                            <% end %>
                                            <% else %>
                                                <li class="active">
                                                <div class="timeline-icon"><i class="gi gi-heart"></i></div>
                                                <div class="timeline-content">
                                                <p class="push-bit"><strong>No Final Exams</strong></a></p>
                                                <p class="push-bit">You have no final exams this trimester!</p>
                                                </div>
                                                </li>
                                            <% end %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>          
 </div>
 </div> 